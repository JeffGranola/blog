#! /bin/sh

MY_DIR="$(CDPATH='' cd "$(dirname "$0")" && pwd)"

echo "Testing prerequisites..."
"$MY_DIR"/dev/test-dev-env
echo "... passed."

echo "Updating submodules..."
(cd "$MY_DIR" && git submodule update --init)
echo "... done."

echo "Invoking hugo..."
(cd "$MY_DIR"/hugo && hugo)
echo "... done."
